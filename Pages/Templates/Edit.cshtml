@page
@model ManufacturingTimeTracking.Pages.Templates.EditModel
@{
    ViewData["Title"] = "Edit Template";
}

<h1>Edit Process Template</h1>

<div class="mb-3">
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>

@if (Model.ProcessTemplate.Phases.Any())
{
    @foreach (var phase in Model.ProcessTemplate.Phases.OrderBy(p => p.SortOrder))
    {
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">@phase.Name</h5>
                <div>
                    <form method="post" asp-page-handler="MovePhase" style="display:inline;">
                        <input type="hidden" name="phaseId" value="@phase.Id" />
                        <button type="submit" name="direction" value="up" class="btn btn-sm btn-outline-secondary" 
                                @(phase.SortOrder == 1 ? "disabled" : "")>↑</button>
                        <button type="submit" name="direction" value="down" class="btn btn-sm btn-outline-secondary"
                                @(phase.SortOrder == Model.ProcessTemplate.Phases.Count ? "disabled" : "")>↓</button>
                    </form>
                    <form method="post" asp-page-handler="DeletePhase" style="display:inline;" 
                          onsubmit="return confirm('Are you sure you want to delete this phase and all its steps?');">
                        <input type="hidden" name="phaseId" value="@phase.Id" />
                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                    </form>
                </div>
            </div>
            <div class="card-body">
                @if (phase.Steps.Any())
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th style="width: 50px;">Order</th>
                                <th>Title</th>
                                <th>Instructions</th>
                                <th>Allow Skip</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var step in phase.Steps.OrderBy(s => s.SortOrder))
                            {
                                <tr>
                                    <td>@step.SortOrder</td>
                                    <td>@step.Title</td>
                                    <td>@(step.Instructions.Length > 50 ? step.Instructions.Substring(0, 50) + "..." : step.Instructions)</td>
                                    <td>@(step.AllowSkip ? "Yes" : "No")</td>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-outline-info" 
                                                onclick="previewStep(@step.Id)" title="Preview Step">
                                            Preview
                                        </button>
                                        <a asp-page="./EditStep" asp-route-id="@step.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                        <form method="post" asp-page-handler="MoveStep" style="display:inline;">
                                            <input type="hidden" name="stepId" value="@step.Id" />
                                            <button type="submit" name="direction" value="up" class="btn btn-sm btn-outline-secondary"
                                                    @(step.SortOrder == 1 ? "disabled" : "")>↑</button>
                                            <button type="submit" name="direction" value="down" class="btn btn-sm btn-outline-secondary"
                                                    @(step.SortOrder == phase.Steps.Count ? "disabled" : "")>↓</button>
                                        </form>
                                        <form method="post" asp-page-handler="DeleteStep" style="display:inline;"
                                              onsubmit="return confirm('Are you sure you want to delete this step?');">
                                            <input type="hidden" name="stepId" value="@step.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">No steps in this phase.</p>
                }

                <div class="mt-3">
                    <h6>Add Step to @phase.Name</h6>
                    <form method="post" asp-page-handler="AddStep" class="row g-3">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" name="SelectedPhaseId" value="@phase.Id" />
                        <input type="hidden" name="NewStep.PhaseTemplateId" value="@phase.Id" />
                        <div class="col-md-3">
                            <label asp-for="NewStep.Title" class="form-label">Title</label>
                            <input asp-for="NewStep.Title" class="form-control" required />
                            <span asp-validation-for="NewStep.Title" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="NewStep.Instructions" class="form-label">Instructions</label>
                            <textarea asp-for="NewStep.Instructions" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="NewStep.Instructions" class="text-danger"></span>
                        </div>
                        <div class="col-md-2">
                            <label asp-for="NewStep.AllowSkip" class="form-label">Allow Skip</label>
                            <div class="form-check mt-2">
                                @{
                                    var allowSkipName = Html.NameFor(m => m.NewStep.AllowSkip);
                                }
                                <input type="hidden" name="@allowSkipName" value="false" />
                                <input type="checkbox" name="@allowSkipName" value="true" id="@Html.IdFor(m => m.NewStep.AllowSkip)" 
                                       class="form-check-input" @(Model.NewStep.AllowSkip == true ? "checked" : "") />
                            </div>
                        </div>
                        <div class="col-md-1">
                            <label class="form-label">&nbsp;</label>
                            <div>
                                <button type="submit" class="btn btn-primary">Add</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="alert alert-info">No phases defined yet. Add a phase below.</div>
}

<div class="card">
    <div class="card-header">
        <h5>Add New Phase</h5>
    </div>
    <div class="card-body">
        <form method="post" asp-page-handler="AddPhase" class="row g-3">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="NewPhase.ProcessTemplateId" />
            <div class="col-md-10">
                <label asp-for="NewPhase.Name" class="form-label">Phase Name</label>
                <input asp-for="NewPhase.Name" class="form-control" required />
                <span asp-validation-for="NewPhase.Name" class="text-danger"></span>
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <div>
                    <button type="submit" class="btn btn-primary">Add Phase</button>
                </div>
            </div>
        </form>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Preview Step Modal -->
<div class="modal fade" id="previewStepModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Step Preview</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="previewStepContent">
                <p>Loading preview...</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function previewStep(stepId) {
            var modal = new bootstrap.Modal(document.getElementById('previewStepModal'));
            var content = document.getElementById('previewStepContent');
            content.innerHTML = '<p>Loading preview...</p>';
            modal.show();

            // Fetch step details
            fetch('/Templates/PreviewStep?stepId=' + stepId)
                .then(response => response.text())
                .then(html => {
                    content.innerHTML = html;
                })
                .catch(error => {
                    content.innerHTML = '<p class="text-danger">Error loading preview: ' + error + '</p>';
                });
        }
    </script>
}
