@page
@model ManufacturingTimeTracking.Pages.Templates.DeleteModel
@{
    ViewData["Title"] = "Delete Process Template";
}

<h1>Delete Process Template</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Process Template</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Machine Model
        </dt>
        <dd class="col-sm-10">
            @(Model.MachineModel?.Name ?? $"ID: {Model.ProcessTemplate.MachineModelId}")
        </dd>
        <dt class="col-sm-2">
            Machine Variant
        </dt>
        <dd class="col-sm-10">
            @(Model.MachineVariant?.Name ?? $"ID: {Model.ProcessTemplate.MachineVariantId}")
        </dd>
        <dt class="col-sm-2">
            Phases
        </dt>
        <dd class="col-sm-10">
            @Model.ProcessTemplate.Phases.Count
        </dd>
        <dt class="col-sm-2">
            Total Steps
        </dt>
        <dd class="col-sm-10">
            @Model.ProcessTemplate.Phases.Sum(p => p.Steps.Count)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="ProcessTemplate.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
