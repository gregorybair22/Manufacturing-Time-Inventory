@page
@model ManufacturingTimeTracking.Pages.Catalog.Models.DeleteModel
@{
    ViewData["Title"] = "Delete Model";
}

<h1>Delete Model</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Machine Model</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MachineModel.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MachineModel.Name)
        </dd>
        <dt class="col-sm-2">
            Variants
        </dt>
        <dd class="col-sm-10">
            @Model.MachineModel.Variants.Count variant(s) will also be deleted
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="MachineModel.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
