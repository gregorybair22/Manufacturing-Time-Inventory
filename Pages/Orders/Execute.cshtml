@page
@model ManufacturingTimeTracking.Pages.Orders.ExecuteModel
@using ManufacturingTimeTracking.Data
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext Context
@{
    ViewData["Title"] = "Execute Manufacturing";
    var workstations = await Context.Workstations.Where(w => w.Active).OrderBy(w => w.Name).ToListAsync();
}

<div class="animate-fade-in">
    <h1 class="text-2xl font-bold text-slate-800 mb-2">Execute Manufacturing</h1>
    <div class="mb-6">
        <a asp-page="./Index" class="px-5 py-2.5 rounded-xl border border-slate-300 text-slate-700 font-medium hover:bg-slate-50 transition-all duration-200">Back to Orders</a>
    </div>

    <div class="bg-white rounded-2xl shadow-soft border border-slate-100 p-6 mb-6">
        <h2 class="text-lg font-semibold text-slate-800 mb-4">Order Information</h2>
        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div><dt class="text-sm font-medium text-slate-500">External Ref</dt><dd class="font-medium text-slate-800">@Model.BuildOrder.ExternalRef</dd></div>
            <div><dt class="text-sm font-medium text-slate-500">Serial Number</dt><dd class="font-medium text-slate-800">@Model.BuildOrder.SerialNumber</dd></div>
            <div><dt class="text-sm font-medium text-slate-500">Model</dt><dd class="font-medium text-slate-800">@Model.MachineModelName</dd></div>
            <div><dt class="text-sm font-medium text-slate-500">Variant</dt><dd class="font-medium text-slate-800">@Model.MachineVariantName</dd></div>
            <div><dt class="text-sm font-medium text-slate-500">Status</dt><dd class="font-medium text-slate-800">@Model.BuildOrder.Status</dd></div>
        </dl>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="mb-6 p-4 rounded-xl bg-emerald-50 border border-emerald-200 text-emerald-800 flex items-center justify-between" role="alert">
            <span>@TempData["Success"]</span>
            <button type="button" onclick="this.parentElement.remove()" class="text-emerald-600 hover:text-emerald-800" aria-label="Dismiss">√ó</button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="mb-6 p-4 rounded-xl bg-red-50 border border-red-200 text-red-800 flex items-center justify-between" role="alert">
            <span>@TempData["Error"]</span>
            <button type="button" onclick="this.parentElement.remove()" class="text-red-600 hover:text-red-800" aria-label="Dismiss">√ó</button>
        </div>
    }

    @if (Model.CurrentExecution == null)
    {
        <div class="bg-white rounded-2xl shadow-soft border border-slate-100 p-6 mb-6">
            <h2 class="text-lg font-semibold text-slate-800 mb-2">Ready to Start Manufacturing</h2>
            <p class="text-slate-600 mb-4">Click the button below to start manufacturing. This will create a snapshot of the process template.</p>
            <form method="post" asp-page-handler="StartManufacturing">
                <input type="hidden" name="orderId" value="@Model.BuildOrder.Id" />
                <button type="submit" class="px-6 py-3 rounded-xl bg-blue-600 text-white font-medium hover:bg-blue-700 shadow-md hover:shadow-lg transition-all duration-200 text-lg">Start Manufacturing</button>
            </form>
        </div>
    }
    else
    {
        <div class="mb-6 p-4 rounded-xl bg-emerald-50 border border-emerald-200 text-emerald-800">
            <strong>Manufacturing in Progress</strong> ‚Äî Started at @Model.CurrentExecution.StartedAt.ToString("g")
        </div>

    @foreach (var phase in Model.CurrentExecution.Phases.OrderBy(p => p.SortOrder))
    {
        <div class="bg-white rounded-2xl shadow-soft border border-slate-100 p-6 mb-6">
            <div class="flex flex-wrap justify-between items-center gap-3 mb-4">
                <h2 class="text-lg font-semibold text-slate-800">@phase.Name</h2>
                @if (User.IsInRole("Admin") || User.IsInRole("Supervisor"))
                {
                    <button type="button" class="px-3 py-1.5 rounded-lg border border-blue-600 text-blue-600 text-sm font-medium hover:bg-blue-50" data-bs-toggle="modal" data-bs-target="#addStepModal@(phase.Id)">
                        + Add Step
                    </button>
                }
            </div>
            <div>
                @foreach (var step in phase.Steps.OrderBy(s => s.SortOrder))
                {
                    var totalSeconds = step.Runs.Where(r => r.DurationSeconds.HasValue).Sum(r => r.DurationSeconds.Value);
                    var timeSpan = TimeSpan.FromSeconds(totalSeconds);
                    var runningStep = step.Runs.FirstOrDefault(r => r.FinishedAt == null);
                    var completedRuns = step.Runs.Where(r => r.FinishedAt != null).OrderBy(r => r.StartedAt).ToList();
                    
                    <div class="rounded-xl border p-0 mb-4 overflow-hidden @(step.State == "Skipped" ? "border-amber-300 bg-amber-50/50" : step.State == "Done" ? "border-emerald-200 bg-emerald-50/30" : step.State == "InProgress" ? "border-blue-300 bg-blue-50/30" : "border-slate-100 bg-slate-50/50")">
                        <div class="flex flex-col md:flex-row md:gap-0">
                            <div class="flex-1 md:min-w-[280px] md:max-w-[320px] p-4 md:p-5 rounded-t-xl md:rounded-t-none md:rounded-l-xl bg-sky-50/80 border-b md:border-b-0 md:border-r border-sky-100/80">
                                <div class="flex items-start gap-3 mb-3">
                                    <span class="inline-flex items-center justify-center w-9 h-9 shrink-0 rounded-full bg-slate-200/90 text-slate-600 text-sm font-semibold border border-slate-200">@step.SortOrder</span>
                                    <div>
                                        <h3 class="font-semibold text-slate-800 text-lg leading-tight">@step.Title</h3>
                                        @if (step.State == "Skipped")
                                        {
                                            <span class="inline-flex mt-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-amber-100 text-amber-800 border border-amber-200/60">Skipped</span>
                                        }
                                        else if (step.State == "Done")
                                        {
                                            <span class="inline-flex mt-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800 border border-emerald-200/60">Done</span>
                                        }
                                        else if (step.State == "InProgress")
                                        {
                                            <span class="inline-flex mt-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 border border-blue-200/60">In Progress</span>
                                        }
                                        else
                                        {
                                            <span class="inline-flex mt-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-sky-100 text-sky-700 border border-sky-200/60">Pending</span>
                                        }
                                    </div>
                                </div>
                                <p class="text-slate-500 text-sm leading-relaxed mb-3 break-words line-clamp-3"
                                title="@step.Instructions">
                                    @(step.Instructions.Length > 200 
                                        ? step.Instructions.Substring(0, 200) + "‚Ä¶" 
                                        : step.Instructions)
                                </p>
                                <div class="text-sm pt-2 border-t border-sky-100/80">
                                    <span class="font-semibold text-slate-700">Total Time:</span>
                                    @if (runningStep != null)
                                    {
                                        <span class="text-amber-600 ml-1">Running‚Ä¶</span>
                                    }
                                    else if (totalSeconds > 0)
                                    {
                                        <span class="text-slate-800 font-medium ml-1">@timeSpan.ToString(@"hh\:mm\:ss")</span>
                                    }
                                    else
                                    {
                                        <span class="text-slate-400 ml-1">‚Äî</span>
                                    }
                                </div>
                            </div>
                            <div class="flex-1 p-4 md:p-5">
                                @if (!string.IsNullOrEmpty(step.SkipReason))
                                {
                                    <div class="p-3 rounded-lg bg-amber-50 border border-amber-200 text-amber-800 text-sm mb-2">
                                        <strong>Skip Reason:</strong> @step.SkipReason
                                    </div>
                                }

                                    @if (completedRuns.Any())
                                    {
                                        <div class="mb-2 flex flex-wrap gap-1 items-center">
                                            <strong class="text-slate-700 text-sm mr-1">Runs:</strong>
                                            @foreach (var run in completedRuns)
                                            {
                                                var runTime = run.DurationSeconds.HasValue ? TimeSpan.FromSeconds(run.DurationSeconds.Value) : TimeSpan.Zero;
                                                <span class="inline-flex px-2 py-0.5 rounded text-xs font-medium bg-slate-100 text-slate-700">
                                                    @runTime.ToString(@"mm\:ss")
                                                    @if (run.Workstation != null)
                                                    {
                                                        <text> (@run.Workstation.Name)</text>
                                                    }
                                                </span>
                                            }
                                            @if (runningStep != null)
                                            {
                                                <span class="inline-flex px-2 py-0.5 rounded text-xs font-medium bg-amber-100 text-amber-800">Running‚Ä¶</span>
                                            }
                                        </div>
                                    }

                                    @if (step.Evidence.Any())
                                    {
                                        <div class="mb-2">
                                            <strong class="text-slate-700">üìö Reference Instructions:</strong>
                                            <p class="text-slate-500 text-sm mb-1">These instructions help future users understand how to perform this step</p>
                                            <div class="flex flex-wrap gap-2 mt-1">
                                                @foreach (var evidence in step.Evidence.OrderByDescending(e => e.CreatedAt))
                                                {
                                                    @if (evidence.Media.Type == "Image" && !string.IsNullOrEmpty(evidence.Media.UrlOrPath))
                                                    {
                                                        <div class="relative w-20 h-20 rounded-lg overflow-hidden border border-slate-200 shrink-0">
                                                            <img src="~/uploads/@evidence.Media.UrlOrPath" 
                                                                 class="w-full h-full object-cover cursor-pointer hover:opacity-90 transition-opacity"
                                                                 data-bs-toggle="modal" 
                                                                 data-bs-target="#instructionViewModal@(evidence.Id)"
                                                                 alt="Instruction" />
                                                            <span class="absolute bottom-0 right-0 bg-slate-800 text-white text-[10px] px-1 rounded-tl">@evidence.CreatedAt.ToString("HH:mm")</span>
                                                        </div>
                                                    }
                                                    else if (evidence.Media.Type == "Video" && !string.IsNullOrEmpty(evidence.Media.UrlOrPath))
                                                    {
                                                        <div class="relative w-28 h-20 rounded-lg border border-slate-200 bg-slate-50 flex flex-col items-center justify-center cursor-pointer hover:bg-slate-100 transition-colors shrink-0"
                                                             data-bs-toggle="modal" 
                                                             data-bs-target="#instructionViewModal@(evidence.Id)">
                                                            <span class="text-2xl">üé•</span>
                                                            <span class="text-slate-500 text-xs">Video</span>
                                                            <span class="absolute bottom-0 right-0 bg-slate-800 text-white text-[10px] px-1 rounded-tl">@evidence.CreatedAt.ToString("HH:mm")</span>
                                                        </div>
                                                    }
                                                    else if (!string.IsNullOrEmpty(evidence.Note))
                                                    {
                                                        <div class="max-w-[200px] rounded-lg border border-slate-200 p-2 cursor-pointer hover:bg-slate-50 transition-colors" 
                                                             data-bs-toggle="modal" 
                                                             data-bs-target="#instructionViewModal@(evidence.Id)">
                                                            <span class="text-slate-500 text-xs">üìù Instruction</span>
                                                            <p class="text-slate-700 text-sm mt-0.5">@(evidence.Note.Length > 50 ? evidence.Note.Substring(0, 50) + "..." : evidence.Note)</p>
                                                            <span class="text-slate-400 text-[10px]">@evidence.CreatedAt.ToString("HH:mm")</span>
                                                        </div>
                                                    }
                                                    
                                                    <!-- Instruction View Modal -->

                                                    <div class="modal fade" id="instructionViewModal@(evidence.Id)" tabindex="-1">
                                                        <div class="modal-dialog modal-lg">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">üìö Reference Instruction</h5>
                                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    @if (evidence.Media.Type == "Image" && !string.IsNullOrEmpty(evidence.Media.UrlOrPath))
                                                                    {
                                                                        <img src="~/uploads/@evidence.Media.UrlOrPath" class="img-fluid mb-2" alt="Instruction" />
                                                                    }
                                                                    else if (evidence.Media.Type == "Video" && !string.IsNullOrEmpty(evidence.Media.UrlOrPath))
                                                                    {
                                                                        <video controls class="w-100 mb-2" style="max-height: 500px;">
                                                                            <source src="/uploads/@evidence.Media.UrlOrPath" type="video/mp4">
                                                                            Your browser does not support the video tag.
                                                                        </video>
                                                                    }
                                                                    @if (!string.IsNullOrEmpty(evidence.Note))
                                                                    {
                                                                        <p><strong>Instruction:</strong> @evidence.Note</p>
                                                                    }
                                                                    <p class="text-muted small">Added: @evidence.CreatedAt.ToString("g")</p>
                                                                    <div class="alert alert-info mt-2">
                                                                        <small>üí° This instruction helps future users understand how to perform this step.</small>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }

                                </div>
                                <div class="flex flex-wrap gap-2 items-start justify-end mt-3 md:mt-0 md:min-w-[200px] pt-3 pr-3">
                                    @if (step.State == "Pending")
                                    {
                                        <a href="/Orders/StepView?stepExecId=@step.Id" target="_blank" class="px-3 py-1.5 rounded-lg border border-blue-600 text-blue-600 text-sm font-medium hover:bg-blue-50">Preview</a>
                                        <button type="button" class="px-3 py-1.5 rounded-lg bg-blue-600 text-white text-sm font-medium hover:bg-blue-700" data-bs-toggle="modal" data-bs-target="#startModal@(step.Id)">Start</button>
                                        @if (step.AllowSkip)
                                        {
                                            <button type="button" class="px-3 py-1.5 rounded-lg bg-amber-500 text-white text-sm font-medium hover:bg-amber-600" data-bs-toggle="modal" data-bs-target="#skipModal@(step.Id)">Skip</button>
                                        }
                                    }
                                    else if (step.State == "InProgress")
                                    {
                                        <a href="/Orders/StepView?stepExecId=@step.Id" target="_blank" class="px-3 py-1.5 rounded-lg bg-blue-600 text-white text-sm font-medium hover:bg-blue-700">View Full Screen</a>
                                        <form method="post" asp-page-handler="StopStep" class="inline">
                                            <input type="hidden" name="stepExecId" value="@step.Id" />
                                            <button type="submit" class="px-3 py-1.5 rounded-lg bg-emerald-600 text-white text-sm font-medium hover:bg-emerald-700">Complete</button>
                                        </form>
                                    }
                                    @if (User.IsInRole("Admin") || User.IsInRole("Supervisor"))
                                    {
                                        <button type="button" class="px-3 py-1.5 rounded-lg border border-slate-300 text-slate-600 text-sm font-medium hover:bg-slate-50" data-bs-toggle="modal" data-bs-target="#instructionModal@(step.Id)">üìö Add Instruction</button>
                                    }

                                    <!-- Start/Rework Modal -->
                                    <div class="modal fade" id="startModal@(step.Id)" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Start Step</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <form method="post" asp-page-handler="StartStepWithWorkstation">
                                                    <div class="modal-body">
                                                        <input type="hidden" name="stepExecId" value="@step.Id" />
                                                        <div class="mb-3">
                                                            <label class="form-label">Workstation (Optional)</label>
                                                            <select name="workstationId" class="form-select">
                                                                <option value="">None</option>
                                                                @foreach (var ws in workstations)
                                                                {
                                                                    <option value="@ws.Id">@ws.Name</option>
                                                                }
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <button type="submit" class="btn btn-primary">Start</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Skip Modal -->
                                    <div class="modal fade" id="skipModal@(step.Id)" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Skip Step</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <form method="post" asp-page-handler="SkipStep">
                                                    <div class="modal-body">
                                                        <input type="hidden" name="stepExecId" value="@step.Id" />
                                                        <div class="mb-3">
                                                            <label class="form-label">Reason for skipping <span class="text-danger">*</span></label>
                                                            <textarea name="skipReason" class="form-control" rows="3" required></textarea>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <button type="submit" class="btn btn-warning">Skip Step</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Instruction Upload Modal -->
                                    <div class="modal fade" id="instructionModal@(step.Id)" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">üìö Add Reference Instruction</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <form method="post" asp-page-handler="UploadEvidence" enctype="multipart/form-data">
                                                    <div class="modal-body">
                                                        <div class="alert alert-info mb-3">
                                                            <small><strong>üí° Purpose:</strong> Add manuals, tutorials, or step-by-step instructions that help future users understand how to perform this step. You can upload images (e.g., pictures of needed tools) or videos, or add written instructions.</small>
                                                        </div>
                                                        <input type="hidden" name="stepExecId" value="@step.Id" />
                                                        <div class="mb-3">
                                                            <label class="form-label">Image or Video</label>
                                                            <input type="file" name="imageFile" class="form-control" accept="image/*,video/*" />
                                                            <small class="text-muted">Upload an image (e.g., picture of tools) or video tutorial</small>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="form-label">Instruction / Description</label>
                                                            <textarea name="note" class="form-control" rows="4" placeholder="Describe the instruction, tutorial, or step-by-step guide. For example: 'Required tools: Screwdriver M4, Wrench 10mm. First, check the alignment, then...'"></textarea>
                                                            <small class="text-muted">Add detailed instructions that will help future users</small>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <button type="submit" class="btn btn-primary">Add Instruction</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                }
                
                <!-- Add Step Modal -->
                <div class="modal fade" id="addStepModal@(phase.Id)" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Add Step to @phase.Name</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <form method="post" asp-page-handler="AddStep">
                                <div class="modal-body">
                                    <input type="hidden" name="phaseExecId" value="@phase.Id" />
                                    <div class="mb-3">
                                        <label class="form-label">Step Title <span class="text-danger">*</span></label>
                                        <input type="text" name="title" class="form-control" required />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Instructions</label>
                                        <textarea name="instructions" class="form-control" rows="3"></textarea>
                                    </div>
                                    <div class="mb-3">
                                        <div class="form-check">
                                            <input type="checkbox" name="allowSkip" class="form-check-input" value="true" checked />
                                            <label class="form-check-label">Allow Skip</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-primary">Add Step</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>      
    }
}
