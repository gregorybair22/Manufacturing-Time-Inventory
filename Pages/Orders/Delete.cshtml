@page "{id:int?}"
@model ManufacturingTimeTracking.Pages.Orders.DeleteModel
@{
    ViewData["Title"] = "Delete Order";
}

<div class="animate-fade-in max-w-2xl">
    <h1 class="text-2xl font-bold text-slate-800 mb-4">Delete Order</h1>
    <p class="text-slate-600 mb-6">Are you sure you want to delete this order? This action cannot be undone.</p>
    @if (Model.BuildOrder != null)
    {
    <dl class="bg-white rounded-xl border border-slate-100 p-6 mb-6">
        <div class="mb-2"><dt class="text-sm text-slate-500">External Ref</dt><dd class="font-medium">@Model.BuildOrder.ExternalRef</dd></div>
        <div class="mb-2"><dt class="text-sm text-slate-500">Serial Number</dt><dd class="font-medium">@Model.BuildOrder.SerialNumber</dd></div>
        <div><dt class="text-sm text-slate-500">Status</dt><dd class="font-medium">@Model.BuildOrder.Status</dd></div>
    </dl>
    <form method="post">
        <input type="hidden" name="id" value="@Model.BuildOrder.Id" />
        <button type="submit" class="px-5 py-2.5 rounded-xl bg-red-600 text-white font-medium hover:bg-red-700">Delete</button>
        <a asp-page="./Index" class="px-5 py-2.5 rounded-xl border border-slate-300 text-slate-700 font-medium hover:bg-slate-50 ml-2">Cancel</a>
    </form>
    }
</div>
