@page
@model ManufacturingTimeTracking.Pages.Orders.IndexModel
@{
    ViewData["Title"] = "Build Orders";
}

<h1>Build Orders</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New Order</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>External Ref</th>
            <th>Serial Number</th>
            <th>Model</th>
            <th>Variant</th>
            <th>Status</th>
            <th>Created</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.BuildOrders)
        {
            <tr>
                <td>@order.ExternalRef</td>
                <td>@order.SerialNumber</td>
                <td>Model @order.MachineModelId</td>
                <td>Variant @order.MachineVariantId</td>
                <td>
                    <span class="badge @(order.Status == "InProgress" ? "bg-warning" : order.Status == "Completed" ? "bg-success" : "bg-secondary")">
                        @order.Status
                    </span>
                </td>
                <td>@order.CreatedAt.ToString("g")</td>
                <td>
                    @if (order.Status == "Pending" || order.Status == "InProgress")
                    {
                        <a asp-page="./Execute" asp-route-id="@order.Id" class="btn btn-sm btn-primary">Execute</a>
                    }
                    <a asp-page="./Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-info">Details</a>
                    <a asp-page="./PickList" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">Pick list</a>
                    <a asp-page="./Summary" asp-route-id="@order.Id" class="btn btn-sm btn-outline-success">Summary</a>
                </td>
            </tr>
        }
    </tbody>
</table>
