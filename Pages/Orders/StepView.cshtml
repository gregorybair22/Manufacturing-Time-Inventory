@page
@model ManufacturingTimeTracking.Pages.Orders.StepViewModel
@{
    ViewData["Title"] = "Step: " + Model.StepExec.Title;
    Layout = null; // Full screen, no layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            padding: 0;
            background: #f5f5f5;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        }
        .step-container {
            display: flex;
            height: 100vh;
            overflow: hidden;
        }
        .main-content {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
            background: white;
        }
        .media-sidebar {
            width: 25%;
            background: #1a1a1a;
            padding: 15px;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
            gap: 15px;
        }
        .step-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
        }
        .step-info {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
        }
        .video-container {
            background: #000;
            border-radius: 8px;
            overflow: hidden;
            margin-bottom: 15px;
        }
        .video-container video {
            width: 100%;
            height: auto;
            display: block;
        }
        .image-container {
            background: #000;
            border-radius: 8px;
            overflow: hidden;
            margin-bottom: 15px;
        }
        .image-container img {
            width: 100%;
            height: auto;
            display: block;
        }
        .evidence-item {
            background: #2a2a2a;
            padding: 10px;
            border-radius: 8px;
            color: white;
            margin-bottom: 10px;
        }
        .evidence-item small {
            color: #aaa;
        }
        .timer-display {
            font-size: 3rem;
            font-weight: bold;
            text-align: center;
            color: #667eea;
            margin: 20px 0;
        }
        .action-buttons {
            position: fixed;
            bottom: 20px;
            right: calc(25% + 20px);
            display: flex;
            gap: 10px;
        }
        .btn-fullscreen {
            background: #667eea;
            color: white;
            border: none;
            padding: 15px 30px;
            border-radius: 8px;
            font-size: 1.1rem;
            cursor: pointer;
        }
        .btn-fullscreen:hover {
            background: #5568d3;
        }
        .close-btn {
            position: fixed;
            top: 20px;
            right: calc(25% + 20px);
            background: rgba(0,0,0,0.5);
            color: white;
            border: none;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            cursor: pointer;
            font-size: 1.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .close-btn:hover {
            background: rgba(0,0,0,0.7);
        }
        .img-thumbnail:hover {
            opacity: 0.8;
            transform: scale(1.05);
            transition: all 0.3s ease;
        }
        #imageModal .modal-dialog {
            max-width: 90vw;
        }
        #imageModal .modal-body img {
            max-width: 100%;
            height: auto;
        }
    </style>
</head>
<body>
    <div class="step-container">
        <!-- Main Content Area (75%) -->
        <div class="main-content">
            <button class="close-btn" onclick="window.close()" title="Close">√ó</button>
            
            <div class="step-header">
                <h1>@Model.StepExec.Title</h1>
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div>
                        <span class="badge bg-light text-dark me-2">Step @Model.StepExec.SortOrder</span>
                        <span class="badge bg-@(Model.StepExec.State == "InProgress" ? "primary" : Model.StepExec.State == "Done" ? "success" : "secondary")">
                            @Model.StepExec.State
                        </span>
                    </div>
                    <div>
                        <strong>Order:</strong> @Model.BuildOrder.ExternalRef | 
                        <strong>Serial:</strong> @Model.BuildOrder.SerialNumber
                    </div>
                </div>
            </div>

            @if (Model.CurrentRun != null)
            {
                <div class="timer-display" id="timer">
                    <span id="timerDisplay">00:00:00</span>
                </div>
            }

            <div class="step-info">
                <h3>Instructions</h3>
                <div style="font-size: 1.1rem; line-height: 1.6;">
                    @Html.Raw(ManufacturingTimeTracking.Helpers.InstructionFormatter.FormatInstructions(Model.StepExec.Instructions))
                </div>
            </div>

            @* Display step template media (images, PDFs) *@
            @if (Model.StepTemplateMedia != null && Model.StepTemplateMedia.Any())
            {
                <div class="step-info">
                    <h4>Reference Documents</h4>
                    <div class="row">
                        @foreach (var stepMedia in Model.StepTemplateMedia)
                        {
                            <div class="col-md-3 mb-3">
                                @if (stepMedia.Media.Type == "Image")
                                {
                                    <div class="card">
                                        <img src="~/uploads/@stepMedia.Media.UrlOrPath" 
                                             class="card-img-top img-thumbnail" 
                                             style="cursor: pointer; height: 150px; object-fit: cover;" 
                                             onclick="openImageModal('@Url.Content($"~/uploads/{stepMedia.Media.UrlOrPath}")')" 
                                             alt="@stepMedia.Caption" />
                                        @if (!string.IsNullOrEmpty(stepMedia.Caption))
                                        {
                                            <div class="card-body">
                                                <p class="card-text small">@stepMedia.Caption</p>
                                            </div>
                                        }
                                    </div>
                                }
                                else if (stepMedia.Media.Type == "PDF")
                                {
                                    <div class="card">
                                        <div class="card-body text-center">
                                            <i class="bi bi-file-pdf" style="font-size: 3rem; color: red;"></i>
                                            <p class="card-text">PDF Document</p>
                                            @if (!string.IsNullOrEmpty(stepMedia.Caption))
                                            {
                                                <p class="card-text small">@stepMedia.Caption</p>
                                            }
                                            <a href="~/uploads/@stepMedia.Media.UrlOrPath" target="_blank" class="btn btn-sm btn-primary">View PDF</a>
                                        </div>
                                    </div>
                                }
                                else if (stepMedia.Media.Type == "Video")
                                {
                                    <div class="card">
                                        <div class="card-body text-center">
                                            <i class="bi bi-play-circle" style="font-size: 3rem;"></i>
                                            <p class="card-text">Video</p>
                                            @if (!string.IsNullOrEmpty(stepMedia.Caption))
                                            {
                                                <p class="card-text small">@stepMedia.Caption</p>
                                            }
                                            <a href="~/uploads/@stepMedia.Media.UrlOrPath" target="_blank" class="btn btn-sm btn-primary">View Video</a>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            }


            <div class="action-buttons">
                @if (Model.StepExec.State == "InProgress")
                {
                    <form method="post" asp-page="/Orders/Execute" asp-page-handler="StopStep" style="display:inline;">
                        <input type="hidden" name="stepExecId" value="@Model.StepExec.Id" />
                        <button type="submit" class="btn btn-fullscreen btn-success">Complete Step</button>
                    </form>
                }
                else if (Model.StepExec.State == "Pending")
                {
                    <form method="post" asp-page="/Orders/Execute" asp-page-handler="StartStep" style="display:inline;">
                        <input type="hidden" name="stepExecId" value="@Model.StepExec.Id" />
                        <button type="submit" class="btn btn-fullscreen btn-primary">Start Step</button>
                    </form>
                }
            </div>
        </div>

        <!-- Media Sidebar (25%) -->
        <div class="media-sidebar">
            @* Tools and Fasteners Section at the top *@
            @if ((Model.StepExec.Tools != null && Model.StepExec.Tools.Any()) || (Model.StepExec.Materials != null && Model.StepExec.Materials.Any()))
            {
                <div style="background: #2a2a2a; padding: 15px; border-radius: 8px; margin-bottom: 20px;">
                    @if (Model.StepExec.Tools != null && Model.StepExec.Tools.Any())
                    {
                        <h5 style="color: white; margin-bottom: 10px;">üîß Required Tools</h5>
                        <ul style="color: #ddd; margin-bottom: 15px; padding-left: 20px;">
                            @foreach (var tool in Model.StepExec.Tools)
                            {
                                <li style="margin-bottom: 5px;">@tool.ToolName</li>
                            }
                        </ul>
                    }
                    @if (Model.StepExec.Materials != null && Model.StepExec.Materials.Any())
                    {
                        <h5 style="color: white; margin-bottom: 10px;">üî© Fasteners / Materials</h5>
                        <ul style="color: #ddd; margin-bottom: 15px; padding-left: 20px;">
                            @foreach (var material in Model.StepExec.Materials)
                            {
                                <li style="margin-bottom: 5px;">
                                    @material.MaterialName@(material.Qty.HasValue ? $" - {material.Qty}" : "")@(!string.IsNullOrEmpty(material.Unit) ? $" {material.Unit}" : "")
                                </li>
                            }
                        </ul>
                    }
                </div>
            }

            <h4 style="color: white; margin-bottom: 20px;">üìö Reference Materials</h4>
            <p style="color: #aaa; font-size: 0.9rem; margin-bottom: 20px;">
                Videos and images from other users working on this step
            </p>

            @if (Model.StepExec.Evidence.Any())
            {
                @foreach (var evidence in Model.StepExec.Evidence.OrderByDescending(e => e.CreatedAt))
                {
                    <div class="evidence-item">
                        @if (evidence.Media.Type == "Video" && !string.IsNullOrEmpty(evidence.Media.UrlOrPath))
                        {
                            <div class="video-container">
                                <video controls autoplay muted loop class="step-video">
                                    <source src="/uploads/@evidence.Media.UrlOrPath" type="video/mp4">
                                    Your browser does not support the video tag.
                                </video>
                            </div>
                            <small>Video by @evidence.Media.UploadedBy - @evidence.CreatedAt.ToString("g")</small>
                        }
                        else if (evidence.Media.Type == "Image" && !string.IsNullOrEmpty(evidence.Media.UrlOrPath))
                        {
                            <div class="image-container">
                                <img src="/uploads/@evidence.Media.UrlOrPath" 
                                     alt="Instruction" 
                                     style="cursor: pointer;" 
                                     onclick="openImageModal('/uploads/@evidence.Media.UrlOrPath')" />
                            </div>
                            <small>Image by @evidence.Media.UploadedBy - @evidence.CreatedAt.ToString("g")</small>
                        }
                        @if (!string.IsNullOrEmpty(evidence.Note))
                        {
                            <div style="margin-top: 10px; padding: 10px; background: #1a1a1a; border-radius: 5px;">
                                <strong>Note:</strong>
                                <p style="margin: 5px 0 0 0; color: #ddd;">@evidence.Note</p>
                            </div>
                        }
                    </div>
                }
            }
            else
            {
                <div class="evidence-item">
                    <p style="color: #aaa; text-align: center;">No reference materials yet.<br/>Be the first to add one!</p>
                </div>
            }

            <div style="margin-top: auto; padding-top: 20px;">
                <a href="/Orders/Execute?id=@Model.BuildOrder.Id" class="btn btn-sm btn-outline-light w-100">
                    ‚Üê Back to Execution
                </a>
            </div>
        </div>
    </div>

    <!-- Image Modal -->
    <div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Image Preview</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    <img id="modalImage" src="" class="img-fluid" alt="Preview" />
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Image modal function
        function openImageModal(imageSrc) {
            document.getElementById('modalImage').src = imageSrc;
            var modal = new bootstrap.Modal(document.getElementById('imageModal'));
            modal.show();
        }
        // Auto-play videos when they come into view
        const observerOptions = {
            root: null,
            rootMargin: '0px',
            threshold: 0.1
        };

        const videoObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.play();
                } else {
                    entry.target.pause();
                }
            });
        }, observerOptions);

        document.querySelectorAll('.step-video').forEach(video => {
            videoObserver.observe(video);
        });

        // Timer functionality
        @if (Model.CurrentRun != null)
        {
            <text>
            const startTime = new Date('@Model.CurrentRun.StartedAt.ToString("O")');
            function updateTimer() {
                const now = new Date();
                const diff = now - startTime;
                const hours = Math.floor(diff / 3600000);
                const minutes = Math.floor((diff % 3600000) / 60000);
                const seconds = Math.floor((diff % 60000) / 1000);
                document.getElementById('timerDisplay').textContent = 
                    String(hours).padStart(2, '0') + ':' + 
                    String(minutes).padStart(2, '0') + ':' + 
                    String(seconds).padStart(2, '0');
            }
            setInterval(updateTimer, 1000);
            updateTimer();
            </text>
        }

        // Request fullscreen on load
        document.addEventListener('DOMContentLoaded', () => {
            if (document.documentElement.requestFullscreen) {
                document.documentElement.requestFullscreen().catch(err => {
                    console.log('Fullscreen not available:', err);
                });
            }
        });
    </script>
</body>
</html>
