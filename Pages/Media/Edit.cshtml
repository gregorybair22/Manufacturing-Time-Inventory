@page
@model ManufacturingTimeTracking.Pages.Media.EditModel
@{
    ViewData["Title"] = "Edit Media";
}

<div class="animate-fade-in max-w-2xl">
    <h1 class="text-2xl font-bold text-slate-800 mb-2">Edit Media</h1>
    <p class="text-slate-500 mb-6">Update media details.</p>
    <div class="bg-white rounded-2xl shadow-soft border border-slate-100 p-6">
        <form method="post" class="space-y-5">
            <div asp-validation-summary="ModelOnly" class="p-4 rounded-xl bg-red-50 text-red-700 text-sm"></div>
            <input type="hidden" asp-for="Media.Id" />
            <div>
                <label asp-for="Media.Type" class="block text-sm font-medium text-slate-700 mb-1.5">Type</label>
                <select asp-for="Media.Type" asp-items="Model.MediaTypes" class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all duration-200">
                    <option value="">-- Select Type --</option>
                </select>
                <span asp-validation-for="Media.Type" class="text-red-600 text-sm mt-1 block"></span>
            </div>
            <div>
                <label asp-for="Media.UrlOrPath" class="block text-sm font-medium text-slate-700 mb-1.5">URL/Path</label>
                <input asp-for="Media.UrlOrPath" class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all duration-200" />
                <span asp-validation-for="Media.UrlOrPath" class="text-red-600 text-sm mt-1 block"></span>
            </div>
            <div>
                <label class="block text-sm font-medium text-slate-700 mb-1.5">Uploaded By</label>
                <input type="text" value="@Model.Media.UploadedBy" class="w-full px-4 py-3 rounded-xl border border-slate-200 bg-slate-50 text-slate-500" disabled />
            </div>
            <div>
                <label class="block text-sm font-medium text-slate-700 mb-1.5">Uploaded At</label>
                <input type="text" value="@Model.Media.UploadedAt.ToString("g")" class="w-full px-4 py-3 rounded-xl border border-slate-200 bg-slate-50 text-slate-500" disabled />
            </div>
            <div class="flex gap-3 pt-2">
                <button type="submit" class="px-5 py-2.5 rounded-xl bg-blue-600 text-white font-medium hover:bg-blue-700 shadow-md hover:shadow-lg transition-all duration-200">Save</button>
                <a asp-page="./Index" class="px-5 py-2.5 rounded-xl border border-slate-300 text-slate-700 font-medium hover:bg-slate-50 transition-all duration-200">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
