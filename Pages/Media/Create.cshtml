@page
@model ManufacturingTimeTracking.Pages.Media.CreateModel
@{
    ViewData["Title"] = "Create Media";
}

<h1>Create Media</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Media.Type" class="control-label"></label>
                <select asp-for="Media.Type" asp-items="Model.MediaTypes" class="form-control">
                    <option value="">-- Select Type --</option>
                </select>
                <span asp-validation-for="Media.Type" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Media.UrlOrPath" class="control-label"></label>
                <input asp-for="Media.UrlOrPath" class="form-control" />
                <span asp-validation-for="Media.UrlOrPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
