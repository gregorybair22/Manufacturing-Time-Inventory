@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="animate-fade-in">
    <h1 class="text-3xl font-bold text-slate-800 mb-2">Manufacturing Time Tracking</h1>
    <p class="text-slate-500 mb-8">Dashboard</p>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 mb-8">
        <div class="bg-white rounded-2xl shadow-soft p-6 border border-slate-100 hover-lift opacity-0 animate-slide-up stagger-1">
            <p class="text-slate-500 text-sm font-medium uppercase tracking-wide">Total Orders</p>
            <p class="text-3xl font-bold text-blue-600 mt-1">@Model.TotalOrders</p>
        </div>
        <div class="bg-white rounded-2xl shadow-soft p-6 border border-slate-100 hover-lift opacity-0 animate-slide-up stagger-2">
            <p class="text-slate-500 text-sm font-medium uppercase tracking-wide">Active Orders</p>
            <p class="text-3xl font-bold text-amber-500 mt-1">@Model.ActiveOrders</p>
        </div>
        <div class="bg-white rounded-2xl shadow-soft p-6 border border-slate-100 hover-lift opacity-0 animate-slide-up stagger-3">
            <p class="text-slate-500 text-sm font-medium uppercase tracking-wide">Templates</p>
            <p class="text-3xl font-bold text-cyan-600 mt-1">@Model.TotalTemplates</p>
        </div>
        <div class="bg-white rounded-2xl shadow-soft p-6 border border-slate-100 hover-lift opacity-0 animate-slide-up stagger-4">
            <p class="text-slate-500 text-sm font-medium uppercase tracking-wide">Machine Models</p>
            <p class="text-3xl font-bold text-emerald-600 mt-1">@Model.TotalModels</p>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-8">
        <div class="bg-white rounded-2xl shadow-soft border border-slate-100 overflow-hidden animate-slide-up opacity-0 stagger-2">
            <div class="px-6 py-4 border-b border-slate-100 bg-slate-50/50">
                <h2 class="text-lg font-semibold text-slate-800">Quick Actions</h2>
            </div>
            <div class="p-6 flex flex-col gap-3">
                <a asp-page="/Orders/Create" class="inline-flex items-center justify-center px-5 py-3 rounded-xl bg-blue-600 text-white font-medium hover:bg-blue-700 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200">Create New Order</a>
                <a asp-page="/Templates/Create" class="inline-flex items-center justify-center px-5 py-3 rounded-xl bg-slate-100 text-slate-700 font-medium hover:bg-slate-200 transition-all duration-200">Create New Template</a>
                <a asp-page="/Catalog/Models/Index" class="inline-flex items-center justify-center px-5 py-3 rounded-xl bg-slate-100 text-slate-700 font-medium hover:bg-slate-200 transition-all duration-200">Manage Models</a>
            </div>
        </div>
        <div class="bg-white rounded-2xl shadow-soft border border-slate-100 overflow-hidden animate-slide-up opacity-0 stagger-3">
            <div class="px-6 py-4 border-b border-slate-100 bg-slate-50/50">
                <h2 class="text-lg font-semibold text-slate-800">Navigation</h2>
            </div>
            <div class="p-6 flex flex-col gap-3">
                <a asp-page="/Orders/Index" class="inline-flex items-center justify-center px-5 py-3 rounded-xl border-2 border-blue-600 text-blue-600 font-medium hover:bg-blue-50 transition-all duration-200">View All Orders</a>
                <a asp-page="/Templates/Index" class="inline-flex items-center justify-center px-5 py-3 rounded-xl border-2 border-slate-300 text-slate-700 font-medium hover:bg-slate-50 transition-all duration-200">View All Templates</a>
            </div>
        </div>
    </div>
</div>
