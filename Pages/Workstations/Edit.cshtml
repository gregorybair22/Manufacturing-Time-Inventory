@page
@model ManufacturingTimeTracking.Pages.Workstations.EditModel
@{
    ViewData["Title"] = "Edit Workstation";
}

<h1>Edit Workstation</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Workstation.Id" />
            <div class="form-group mb-3">
                <label asp-for="Workstation.Name" class="control-label"></label>
                <input asp-for="Workstation.Name" class="form-control" />
                <span asp-validation-for="Workstation.Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Workstation.DeviceId" class="control-label"></label>
                <input asp-for="Workstation.DeviceId" class="form-control" />
                <span asp-validation-for="Workstation.DeviceId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <div class="form-check">
                    <input asp-for="Workstation.Active" class="form-check-input" type="checkbox" />
                    <label asp-for="Workstation.Active" class="form-check-label">Active</label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
