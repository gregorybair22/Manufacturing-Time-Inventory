@page
@model ManufacturingTimeTracking.Pages.Workstations.CreateModel
@{
    ViewData["Title"] = "Create Workstation";
}

<div class="animate-fade-in max-w-2xl">
    <h1 class="text-2xl font-bold text-slate-800 mb-2">Create Workstation</h1>
    <p class="text-slate-500 mb-6">Add a new workstation.</p>
    <div class="bg-white rounded-2xl shadow-soft border border-slate-100 p-6">
        <form method="post" class="space-y-5">
            <div asp-validation-summary="ModelOnly" class="p-4 rounded-xl bg-red-50 text-red-700 text-sm"></div>
            <div>
                <label asp-for="Workstation.Name" class="block text-sm font-medium text-slate-700 mb-1.5">Name</label>
                <input asp-for="Workstation.Name" class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all duration-200" />
                <span asp-validation-for="Workstation.Name" class="text-red-600 text-sm mt-1 block"></span>
            </div>
            <div>
                <label asp-for="Workstation.DeviceId" class="block text-sm font-medium text-slate-700 mb-1.5">Device ID</label>
                <input asp-for="Workstation.DeviceId" class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all duration-200" />
                <span asp-validation-for="Workstation.DeviceId" class="text-red-600 text-sm mt-1 block"></span>
            </div>
            <div class="flex items-center gap-2">
                <input asp-for="Workstation.Active" type="checkbox" class="w-4 h-4 rounded border-slate-300 text-blue-600 focus:ring-blue-500" />
                <label asp-for="Workstation.Active" class="text-sm font-medium text-slate-700">Active</label>
            </div>
            <div class="flex gap-3 pt-2">
                <button type="submit" class="px-5 py-2.5 rounded-xl bg-blue-600 text-white font-medium hover:bg-blue-700 shadow-md hover:shadow-lg transition-all duration-200">Create</button>
                <a asp-page="Index" class="px-5 py-2.5 rounded-xl border border-slate-300 text-slate-700 font-medium hover:bg-slate-50 transition-all duration-200">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
