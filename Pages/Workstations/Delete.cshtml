@page
@model ManufacturingTimeTracking.Pages.Workstations.DeleteModel
@{
    ViewData["Title"] = "Delete Workstation";
}

<h1>Delete Workstation</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Workstation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Workstation.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Workstation.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Workstation.DeviceId)
        </dt>
        <dd class="col-sm-10">
            @(Model.Workstation.DeviceId ?? "-")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Workstation.Active)
        </dt>
        <dd class="col-sm-10">
            @(Model.Workstation.Active ? "Yes" : "No")
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Workstation.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
