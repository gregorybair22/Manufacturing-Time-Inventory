@page
@model ManufacturingTimeTracking.Pages.Workstations.DeleteModel
@{
    ViewData["Title"] = "Delete Workstation";
}

<div class="animate-fade-in max-w-2xl">
    <h1 class="text-2xl font-bold text-slate-800 mb-2">Delete Workstation</h1>
    <p class="text-slate-500 mb-6">Are you sure you want to delete this workstation?</p>
    <div class="bg-white rounded-2xl shadow-soft border border-slate-100 p-6 mb-6">
        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div><dt class="text-sm font-medium text-slate-500">@Html.DisplayNameFor(model => model.Workstation.Name)</dt><dd class="font-medium text-slate-800">@Html.DisplayFor(model => model.Workstation.Name)</dd></div>
            <div><dt class="text-sm font-medium text-slate-500">@Html.DisplayNameFor(model => model.Workstation.DeviceId)</dt><dd class="font-medium text-slate-800">@(Model.Workstation.DeviceId ?? "â€”")</dd></div>
            <div><dt class="text-sm font-medium text-slate-500">@Html.DisplayNameFor(model => model.Workstation.Active)</dt><dd class="font-medium text-slate-800">@(Model.Workstation.Active ? "Yes" : "No")</dd></div>
        </dl>
    </div>
    <form method="post" class="flex gap-3">
        <input type="hidden" asp-for="Workstation.Id" />
        <button type="submit" class="px-5 py-2.5 rounded-xl bg-red-600 text-white font-medium hover:bg-red-700 shadow-md transition-all duration-200">Delete</button>
        <a asp-page="./Index" class="px-5 py-2.5 rounded-xl border border-slate-300 text-slate-700 font-medium hover:bg-slate-50 transition-all duration-200">Back to List</a>
    </form>
</div>
