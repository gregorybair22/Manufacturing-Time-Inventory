@page
@model ManufacturingTimeTracking.Pages.Admin.Users.IndexModel
@{
    ViewData["Title"] = "Manage Users & Roles";
}

<div class="animate-fade-in">
    <h1 class="text-2xl font-bold text-slate-800 mb-2">Manage Users & Roles</h1>
    <p class="text-slate-600 mb-6">As an admin you can change each user's role and reset their password. Every user must have a role.</p>

    <div class="bg-white rounded-2xl shadow-soft border border-slate-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-slate-200">
                <thead class="bg-slate-50/80">
                    <tr>
                        <th class="px-6 py-4 text-center text-xs font-semibold text-slate-500 uppercase">Email</th>
                        <th class="px-6 py-4 text-center text-xs font-semibold text-slate-500 uppercase">User name</th>
                        <th class="px-6 py-4 text-center text-xs font-semibold text-slate-500 uppercase">Roles</th>
                        <th class="px-6 py-4 text-center text-xs font-semibold text-slate-500 uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    @foreach (var u in Model.Users)
                    {
                        <tr class="hover:bg-slate-50/50 transition-colors">
                            <td class="px-6 py-4 text-center text-slate-800 font-medium">@u.Email</td>
                            <td class="px-6 py-4 text-center text-slate-600">@u.UserName</td>
                            <td class="px-6 py-4 text-center">
                                <span class="inline-flex px-2.5 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">@u.Roles</span>
                            </td>
                            <td class="px-6 py-4 text-center">
                                <a asp-page="./Edit" asp-route-id="@u.Id" class="inline-flex items-center px-3 py-1.5 rounded-lg border border-blue-600 text-blue-600 text-sm font-medium hover:bg-blue-50">Edit role & password</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-6 p-4 rounded-xl bg-slate-50 border border-slate-200 text-slate-600 text-sm">
        <strong>Roles:</strong> Admin (full access, manage users), Supervisor (edit templates & add steps/instructions), Operator (time tracking, no step edits), Inventory (inventory only), Normal (view/execute only, no step edits, no prices).
    </div>
</div>
