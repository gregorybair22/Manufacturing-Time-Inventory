@page
@model ManufacturingTimeTracking.Pages.Admin.Users.EditModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="animate-fade-in w-full">
    <div class="mb-6">
        <a asp-page="./Index" class="inline-flex items-center px-4 py-2 rounded-xl border border-slate-300 text-slate-700 font-medium hover:bg-slate-50 transition-all duration-200">← Back to Users</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="mb-6 p-4 rounded-xl bg-emerald-50 border border-emerald-200 text-emerald-800 flex items-center justify-between" role="alert">
            <span>@TempData["Success"]</span>
            <button type="button" onclick="this.parentElement.remove()" class="text-emerald-600 hover:text-emerald-800" aria-label="Dismiss">×</button>
        </div>
    }

    <h1 class="text-2xl font-bold text-slate-800 mb-2">Edit User</h1>
    <p class="text-slate-600 mb-6">User: <strong>@Model.Email</strong></p>

    <form method="post" class="bg-white rounded-2xl shadow-soft border border-slate-100 p-6 max-w-2xl mx-auto">
        <!-- <div asp-validation-summary="All" class="p-4 rounded-xl bg-red-50 text-red-700 text-sm mb-4"></div> -->

        <div class="mb-5">
            <label asp-for="Input.Role" class="block text-sm font-medium text-slate-700 mb-1.5">Role <span class="text-red-500">*</span></label>
            <select asp-for="Input.Role" asp-items="Model.RoleList" class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20"></select>
            <span asp-validation-for="Input.Role" class="text-red-600 text-sm mt-1 block"></span>
        </div>

        <div class="mb-5">
            <label asp-for="Input.NewPassword" class="block text-sm font-medium text-slate-700 mb-1.5">New password (optional)</label>
            <input asp-for="Input.NewPassword" class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20" autocomplete="new-password" />
            <span class="text-slate-500 text-sm">Leave blank to keep current password.</span>
            <span asp-validation-for="Input.NewPassword" class="text-red-600 text-sm mt-1 block"></span>
        </div>

        <div class="mb-6">
            <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-slate-700 mb-1.5">Confirm new password</label>
            <input asp-for="Input.ConfirmPassword" class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20" autocomplete="new-password" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 text-sm mt-1 block"></span>
        </div>

        <div class="flex gap-3">
            <button type="submit" class="px-5 py-2.5 rounded-xl bg-blue-600 text-white font-medium hover:bg-blue-700 transition-all duration-200">Save</button>
            <a asp-page="./Index" class="px-5 py-2.5 rounded-xl border border-slate-300 text-slate-700 font-medium hover:bg-slate-50 transition-all duration-200">Cancel</a>
        </div>
    </form>
</div>
