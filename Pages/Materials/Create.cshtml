@page
@model ManufacturingTimeTracking.Pages.Materials.CreateModel
@{
    ViewData["Title"] = "Create Material";
}

<h1>Create Material</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Material.Name" class="control-label"></label>
                <input asp-for="Material.Name" class="form-control" />
                <span asp-validation-for="Material.Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Material.Unit" class="control-label"></label>
                <input asp-for="Material.Unit" class="form-control" />
                <span asp-validation-for="Material.Unit" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ImageFile" class="control-label">Image (Optional)</label>
                <input type="file" asp-for="ImageFile" class="form-control" accept="image/jpeg,image/jpg,image/png,image/gif" />
                <small class="form-text text-muted">Supported: JPEG, JPG, PNG, GIF</small>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
