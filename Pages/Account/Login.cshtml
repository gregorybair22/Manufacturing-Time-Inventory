@page
@model ManufacturingTimeTracking.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="max-w-md mx-auto animate-slide-up">
    <div class="bg-white rounded-2xl shadow-card border border-slate-100 overflow-hidden">
        <div class="px-8 pt-8 pb-2">
            <h1 class="text-2xl font-bold text-slate-800">@ViewData["Title"]</h1>
            <p class="text-slate-500 text-sm mt-1">Use your account to sign in.</p>
        </div>
        <form id="account" method="post" class="px-8 pb-8">
            <div asp-validation-summary="ModelOnly" class="mb-4 p-4 rounded-xl bg-red-50 text-red-700 text-sm" role="alert"></div>
            <div class="space-y-5">
                <div>
                    <label asp-for="Input.Email" class="block text-sm font-medium text-slate-700 mb-1.5">Email</label>
                    <input asp-for="Input.Email" class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all duration-200" autocomplete="username" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-red-600 text-sm mt-1 block"></span>
                </div>
                <div>
                    <label asp-for="Input.Password" class="block text-sm font-medium text-slate-700 mb-1.5">Password</label>
                    <input asp-for="Input.Password" class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all duration-200" autocomplete="current-password" placeholder="Password" />
                    <span asp-validation-for="Input.Password" class="text-red-600 text-sm mt-1 block"></span>
                </div>
                <div class="flex items-center gap-2">
                    <input asp-for="Input.RememberMe" class="w-4 h-4 rounded border-slate-300 text-blue-600 focus:ring-blue-500" />
                    <label asp-for="Input.RememberMe" class="text-sm text-slate-600">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                </div>
            </div>
            <button type="submit" class="mt-6 w-full py-3.5 rounded-xl bg-blue-600 text-white font-semibold hover:bg-blue-700 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200">
                Log in
            </button>
            <p class="mt-4 text-center text-sm text-slate-500">
                <a asp-page="./Register" class="text-blue-600 hover:text-blue-700 font-medium hover:underline">Don't have an account? Register</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
