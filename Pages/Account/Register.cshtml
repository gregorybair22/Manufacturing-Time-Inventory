@page
@model ManufacturingTimeTracking.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="animate-fade-in max-w-md mx-auto">
    <h1 class="text-2xl font-bold text-slate-800 mb-2">@ViewData["Title"]</h1>
    <p class="text-slate-500 mb-6">Create a new account.</p>
    <div class="bg-white rounded-2xl shadow-soft border border-slate-100 p-6">
        <form id="registerForm" method="post" class="space-y-5">
            <div asp-validation-summary="ModelOnly" class="p-4 rounded-xl bg-red-50 text-red-700 text-sm" role="alert"></div>
            <div>
                <label asp-for="Input.Email" class="block text-sm font-medium text-slate-700 mb-1.5">Email</label>
                <input asp-for="Input.Email" class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all duration-200" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-red-600 text-sm mt-1 block"></span>
            </div>
            <div>
                <label asp-for="Input.Password" class="block text-sm font-medium text-slate-700 mb-1.5">Password</label>
                <input asp-for="Input.Password" class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all duration-200" autocomplete="new-password" aria-required="true" placeholder="Password" />
                <span asp-validation-for="Input.Password" class="text-red-600 text-sm mt-1 block"></span>
            </div>
            <div>
                <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-slate-700 mb-1.5">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all duration-200" autocomplete="new-password" aria-required="true" placeholder="Confirm password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 text-sm mt-1 block"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-full px-5 py-3 rounded-xl bg-blue-600 text-white font-medium hover:bg-blue-700 shadow-md hover:shadow-lg transition-all duration-200">Register</button>
            <p class="text-center text-slate-600 text-sm">
                <a asp-page="./Login" class="text-blue-600 hover:text-blue-700 font-medium">Already have an account? Log in</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
