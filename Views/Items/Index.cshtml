@model IEnumerable<ManufacturingTimeTracking.Models.Inventory.Item>
@{
    ViewData["Title"] = "Items";
    var q = (string)(ViewBag.Query ?? "");
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Items</h2>
    <a class="btn btn-primary" asp-action="QuickCreate">Quick add</a>
</div>

<form method="get" class="mb-3">
    <div class="input-group">
        <input class="form-control" name="q" placeholder="Search by SKU or name" value="@q" />
        <button class="btn btn-outline-secondary">Search</button>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>SKU</th>
            <th>Name</th>
            <th>Family</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var i in Model)
    {
        <tr>
            <td>@i.Sku</td>
            <td>@i.Name</td>
            <td>@i.Family</td>
            <td><a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@i.Id">View</a></td>
        </tr>
    }
    </tbody>
</table>
