@model IEnumerable<ManufacturingTimeTracking.Models.Inventory.Movement>
@{
    ViewData["Title"] = "Movements";
}
<div class="animate-fade-in">
    <h1 class="text-2xl font-bold text-slate-800 mb-6">Movements (ledger)</h1>
    <div class="bg-white rounded-2xl shadow-soft border border-slate-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-slate-200 table-fixed w-full">
                <thead class="bg-slate-50/80">
                    <tr>
                        <th class="px-6 py-4 text-center text-xs font-semibold text-slate-500 uppercase tracking-wider">Date</th>
                        <th class="px-6 py-4 text-center text-xs font-semibold text-slate-500 uppercase tracking-wider">Type</th>
                        <th class="px-6 py-4 text-center text-xs font-semibold text-slate-500 uppercase tracking-wider">SKU</th>
                        <th class="px-6 py-4 text-center text-xs font-semibold text-slate-500 uppercase tracking-wider">Item</th>
                        <th class="px-6 py-4 text-center text-xs font-semibold text-slate-500 uppercase tracking-wider">Qty</th>
                        <th class="px-6 py-4 text-center text-xs font-semibold text-slate-500 uppercase tracking-wider">From</th>
                        <th class="px-6 py-4 text-center text-xs font-semibold text-slate-500 uppercase tracking-wider">To</th>
                        <th class="px-6 py-4 text-center text-xs font-semibold text-slate-500 uppercase tracking-wider">User</th>
                        <th class="px-6 py-4 text-center text-xs font-semibold text-slate-500 uppercase tracking-wider">Notes</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    @foreach (var m in Model)
                    {
                        <tr class="table-row-hover transition-colors duration-150">
                            <td class="px-6 py-4 text-center text-slate-600">@m.TimestampUtc.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                            <td class="px-6 py-4 text-center font-medium text-slate-800">@m.Type</td>
                            <td class="px-6 py-4 text-center text-slate-600">@m.Item?.Sku</td>
                            <td class="px-6 py-4 text-center text-slate-800">@m.Item?.Name</td>
                            <td class="px-6 py-4 text-center text-slate-600">@m.Quantity</td>
                            <td class="px-6 py-4 text-center text-slate-600">@(m.FromLocation?.Code ?? "—")</td>
                            <td class="px-6 py-4 text-center text-slate-600">@(m.ToLocation?.Code ?? "—")</td>
                            <td class="px-6 py-4 text-center text-slate-600">@m.PerformedBy</td>
                            <td class="px-6 py-4 text-center text-slate-500">@(m.Notes ?? "—")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
