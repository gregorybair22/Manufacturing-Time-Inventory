@model ManufacturingTimeTracking.Models.Inventory.Location
@{
    ViewData["Title"] = "Edit location";
}
<div class="animate-fade-in max-w-3xl mx-auto">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
        <h1 class="text-2xl font-bold text-slate-800">Edit location: @Model.Code</h1>
        <div class="flex gap-2">
            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="inline" onsubmit="return confirm('Are you sure you want to delete this location?')">
                @Html.AntiForgeryToken()
                <button type="submit" class="px-4 py-2 rounded-xl border border-red-600 text-red-600 font-medium hover:bg-red-50 transition-all duration-200">Delete</button>
            </form>
            <a asp-action="Details" asp-route-id="@Model.Id" class="px-4 py-2 rounded-xl border border-slate-300 text-slate-700 font-medium hover:bg-slate-50 transition-all duration-200">Cancel</a>
        </div>
    </div>
    <div class="bg-white rounded-2xl shadow-soft border border-slate-100 p-6">
        <form asp-action="Edit" method="post" class="space-y-5">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-5">
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1.5">Zone</label>
                    <input asp-for="Zone" class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1.5">X</label>
                    <input asp-for="X" class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1.5">Y</label>
                    <input asp-for="Y" class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1.5">Z</label>
                    <input asp-for="Z" class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1.5">Type</label>
                    <select asp-for="Type" class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20">
                        <option value="Shelf">Shelf</option>
                        <option value="Workstation">Workstation</option>
                        <option value="Reception">Reception</option>
                        <option value="Output">Output</option>
                        <option value="Quarantine">Quarantine</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1.5">Capacity</label>
                    <input asp-for="CapacityUnits" class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1.5">Blocked</label>
                    <select asp-for="IsBlocked" class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20">
                        <option value="false">No</option>
                        <option value="true">Yes</option>
                    </select>
                </div>
            </div>
            <div class="pt-2 text-center">
                <button type="submit" class="px-5 py-2.5 rounded-xl bg-blue-600 text-white font-medium hover:bg-blue-700 shadow-md hover:shadow-lg transition-all duration-200">Save changes</button>
            </div>
        </form>
    </div>
</div>
