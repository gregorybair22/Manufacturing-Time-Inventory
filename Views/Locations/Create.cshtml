@model ManufacturingTimeTracking.Models.Inventory.Location
@{
    ViewData["Title"] = "New location";
}
<div class="animate-fade-in max-w-3xl">
    <h1 class="text-2xl font-bold text-slate-800 mb-6">New location</h1>
    <div class="bg-white rounded-2xl shadow-soft border border-slate-100 p-6">
        <form method="post" class="space-y-5">
            @Html.AntiForgeryToken()
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-5">
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1.5">Code (unique)</label>
                    <input class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20" asp-for="Code" placeholder="Z1-X03-Y02 or WS-01" />
                    <span class="text-red-600 text-sm mt-1 block" asp-validation-for="Code"></span>
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1.5">Zone</label>
                    <input class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20" asp-for="Zone" placeholder="Z1" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1.5">X</label>
                    <input class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20" asp-for="X" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1.5">Y</label>
                    <input class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20" asp-for="Y" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1.5">Z (optional)</label>
                    <input class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20" asp-for="Z" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1.5">Type</label>
                    <select class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20" asp-for="Type">
                        <option value="Shelf">Shelf</option>
                        <option value="Workstation">Workstation</option>
                        <option value="Reception">Reception</option>
                        <option value="Output">Output</option>
                        <option value="Quarantine">Quarantine</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1.5">Capacity (units)</label>
                    <input class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20" asp-for="CapacityUnits" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1.5">Blocked</label>
                    <select class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20" asp-for="IsBlocked">
                        <option value="false">No</option>
                        <option value="true">Yes</option>
                    </select>
                </div>
            </div>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="p-4 rounded-xl bg-red-50 border border-red-200 text-red-700 text-sm">
                    @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@err.ErrorMessage</div>
                    }
                </div>
            }
            <div class="flex gap-3 pt-2">
                <button type="submit" class="px-5 py-2.5 rounded-xl bg-blue-600 text-white font-medium hover:bg-blue-700 shadow-md hover:shadow-lg transition-all duration-200">Save</button>
                <a class="px-5 py-2.5 rounded-xl border border-slate-300 text-slate-700 font-medium hover:bg-slate-50 transition-all duration-200" asp-action="Index">Back</a>
            </div>
        </form>
    </div>
</div>
