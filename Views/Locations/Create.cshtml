@model ManufacturingTimeTracking.Models.Inventory.Location
@{
    ViewData["Title"] = "New location";
}
<h2>New location</h2>

<form method="post" class="card p-3">
    @Html.AntiForgeryToken()

    <div class="row g-3">
        <div class="col-md-4">
            <label class="form-label">Code (unique)</label>
            <input class="form-control" asp-for="Code" placeholder="Z1-X03-Y02 or WS-01" />
            <span class="text-danger" asp-validation-for="Code"></span>
        </div>
        <div class="col-md-2">
            <label class="form-label">Zone</label>
            <input class="form-control" asp-for="Zone" placeholder="Z1" />
        </div>
        <div class="col-md-2">
            <label class="form-label">X</label>
            <input class="form-control" asp-for="X" />
        </div>
        <div class="col-md-2">
            <label class="form-label">Y</label>
            <input class="form-control" asp-for="Y" />
        </div>
        <div class="col-md-2">
            <label class="form-label">Z (optional)</label>
            <input class="form-control" asp-for="Z" />
        </div>

        <div class="col-md-3">
            <label class="form-label">Type</label>
            <select class="form-select" asp-for="Type">
                <option value="Shelf">Shelf</option>
                <option value="Workstation">Workstation</option>
                <option value="Reception">Reception</option>
                <option value="Output">Output</option>
                <option value="Quarantine">Quarantine</option>
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">Capacity (units)</label>
            <input class="form-control" asp-for="CapacityUnits" />
        </div>
        <div class="col-md-3">
            <label class="form-label">Blocked</label>
            <select class="form-select" asp-for="IsBlocked">
                <option value="false">No</option>
                <option value="true">Yes</option>
            </select>
        </div>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mt-3">
            @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@err.ErrorMessage</div>
            }
        </div>
    }

    <div class="mt-3">
        <button class="btn btn-primary btn-lg">Save</button>
        <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
    </div>
</form>
