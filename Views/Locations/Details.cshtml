@model ManufacturingTimeTracking.Models.Inventory.Location
@{
    ViewData["Title"] = "Location";
}
<div class="animate-fade-in max-w-4xl mx-auto">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
        <h1 class="text-2xl font-bold text-slate-800">Location: <code class="px-2 py-1 rounded bg-slate-100 text-slate-700">@Model.Code</code></h1>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="px-4 py-2 rounded-xl border border-blue-600 text-blue-600 font-medium hover:bg-blue-50 transition-all duration-200 w-fit">Edit</a>
    </div>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div class="space-y-4">
            <div class="bg-white rounded-2xl shadow-soft border border-slate-100 p-6">
                <dl class="space-y-3">
                    <div><dt class="text-sm font-medium text-slate-500">Zone</dt><dd class="font-medium text-slate-800">@Model.Zone</dd></div>
                    <div><dt class="text-sm font-medium text-slate-500">X/Y/Z</dt><dd class="font-medium text-slate-800">@Model.X / @Model.Y / @(Model.Z?.ToString() ?? "—")</dd></div>
                    <div><dt class="text-sm font-medium text-slate-500">Type</dt><dd class="font-medium text-slate-800">@Model.Type</dd></div>
                    <div><dt class="text-sm font-medium text-slate-500">Capacity</dt><dd class="font-medium text-slate-800">@Model.CapacityUnits</dd></div>
                    <div><dt class="text-sm font-medium text-slate-500">Blocked</dt><dd class="font-medium text-slate-800">@(Model.IsBlocked ? "Yes" : "No")</dd></div>
                </dl>
            </div>
            <div class="p-4 rounded-xl bg-slate-50 border border-slate-200 text-slate-600 text-sm">
                This QR encodes <code class="px-1 rounded bg-slate-200">@Model.Code</code>. You can print it and stick it on the shelf or at the production station.
            </div>
            <div class="flex flex-wrap gap-2">
                <a class="inline-flex items-center px-5 py-2.5 rounded-xl bg-blue-600 text-white font-medium hover:bg-blue-700 shadow-md transition-all duration-200" asp-action="PrintLabel" asp-route-id="@Model.Id" target="_blank">Print label (60×30mm)</a>
                <a class="inline-flex items-center px-4 py-2.5 rounded-xl border border-blue-600 text-blue-600 font-medium hover:bg-blue-50 transition-all duration-200" href="@Url.Action("Qr", new { id = Model.Id, pixelsPerModule = 10 })" target="_blank">Open QR (PNG)</a>
                <a class="inline-flex items-center px-4 py-2.5 rounded-xl border border-slate-300 text-slate-700 font-medium hover:bg-slate-50 transition-all duration-200" asp-action="Index" asp-route-zone="@Model.Zone">Back</a>
            </div>
        </div>
        <div class="bg-white rounded-2xl shadow-soft border border-slate-100 p-6 text-center">
            <img alt="QR" class="max-w-full h-auto rounded-xl mx-auto" src="@Url.Action("Qr", new { id = Model.Id, pixelsPerModule = 10 })" />
            <div class="mt-3 font-medium text-slate-800"><code class="px-2 py-1 rounded bg-slate-100">@Model.Code</code></div>
        </div>
    </div>
</div>
