@model ManufacturingTimeTracking.Controllers.OperationsController.PickVm
@{
    ViewData["Title"] = "Pick";
    var msg = TempData["Msg"] as string;
}
<div class="animate-fade-in max-w-4xl">
    <h1 class="text-2xl font-bold text-slate-800 mb-6">Pick</h1>

    @if (!string.IsNullOrWhiteSpace(msg))
    {
        <div class="mb-6 p-4 rounded-xl bg-emerald-50 border border-emerald-200 text-emerald-800">@msg</div>
    }

    <div class="mb-6 p-4 rounded-xl bg-slate-50 border border-slate-200 text-slate-700 text-sm">
        Recommended order: <strong>LOCATION → TAG</strong>. For packs, leave Quantity=1 and the pack will be applied automatically. Pick from warehouse and send to Production, Workshop, or a specific station/order.
    </div>

    <div class="bg-white rounded-2xl shadow-soft border border-slate-100 p-6">
        <form method="post" class="space-y-5">
            @Html.AntiForgeryToken()
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-5">
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1.5">LOCATION (shelf QR)</label>
                    <input class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 text-lg" name="LocationCode" value="@Model.LocationCode" autofocus />
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1.5">TAG (RFID/QR of item or box)</label>
                    <input class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 text-lg" name="TagCode" value="@Model.TagCode" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1.5">Quantity</label>
                    <input class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 text-lg" type="number" min="1" name="Quantity" value="@Model.Quantity" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1.5">Destination</label>
                    <select class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 text-lg" name="DestinationType">
                        <option value="PROD" selected="@(Model.DestinationType == "PROD")">Production</option>
                        <option value="TALLER" selected="@(Model.DestinationType == "TALLER")">Workshop</option>
                        <option value="WS" selected="@(Model.DestinationType == "WS")">Station</option>
                        <option value="ORDER" selected="@(Model.DestinationType == "ORDER")">Order</option>
                        <option value="CUSTOM" selected="@(Model.DestinationType == "CUSTOM")">Other (code)</option>
                    </select>
                </div>
            </div>
            <div class="max-w-md">
                <label class="block text-sm font-medium text-slate-700 mb-1.5">Destination reference (if Station/Order/Other)</label>
                <input class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20" name="DestinationRef" value="@Model.DestinationRef" placeholder="e.g. WS-01, 2026-0012" />
                <p class="text-slate-500 text-sm mt-1">Station → DEST:WS:&lt;REF&gt;. Order → DEST:PEDIDO:&lt;REF&gt;.</p>
            </div>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="p-4 rounded-xl bg-red-50 border border-red-200 text-red-700 text-sm">
                    @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@err.ErrorMessage</div>
                    }
                </div>
            }
            <div class="flex gap-3 pt-2">
                <button type="submit" class="px-6 py-3 rounded-xl bg-blue-600 text-white font-medium hover:bg-blue-700 shadow-md hover:shadow-lg transition-all duration-200 text-lg">Pick</button>
                <a class="px-5 py-2.5 rounded-xl border border-slate-300 text-slate-700 font-medium hover:bg-slate-50 transition-all duration-200" asp-action="Index">Back</a>
            </div>
        </form>
    </div>
</div>
